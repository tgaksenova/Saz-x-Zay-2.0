<Page x:Class="Sazay.Pages.DirectorMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sazay.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="DirectorMenu">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="245"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="257"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Группы" Click="Groups_OnClick" Grid.Column="1" Grid.Row="1"  VerticalAlignment="Top" Margin=" 0,10,0,0"/>
        <Button Content="Дисциплины" Click="Classes_OnClick" Grid.Column="1" Grid.Row="1"  VerticalAlignment="Top" Margin=" 0,115,0,0"/>
        <Button Content="Преподаватели" Click="Teachers_OnClick" Grid.Column="1" Grid.Row="1"  VerticalAlignment="Top" Margin=" 0,210,0,0"/>
    </Grid>
</Page>
